<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs">
  <Package
    Name="dlapp"
    Manufacturer="dlapp"
    Version="1.0.0.0"
    UpgradeCode="{6A0BF8C7-243F-4DE0-9F82-3179203E70FC}"
    Scope="perMachine"
    Language="1033"
    InstallerVersion="500"
    Compressed="yes">

    <MajorUpgrade DowngradeErrorMessage="A newer version of dlapp is already installed." />
    <MediaTemplate />

    <Feature Id="ProductFeature" Title="dlapp" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
    </Feature>
  </Package>

  <Fragment>
    <StandardDirectory Id="ProgramFilesFolder">
      <Directory Id="INSTALLFOLDER" Name="dlapp">
        <Component Id="MainExe" Guid="*">
          <File Id="MainExeFile" Source="$(var.PublishDir)\dlapp.exe" KeyPath="yes" />
        </Component>
      </Directory>
    </StandardDirectory>

    <StandardDirectory Id="ProgramMenuFolder">
      <Directory Id="ProgramMenuDir" Name="dlapp">
        <Component Id="StartMenuShortcutComponent" Guid="*">
          <Shortcut Id="StartMenuShortcut" Name="dlapp" Target="[INSTALLFOLDER]dlapp.exe" WorkingDirectory="INSTALLFOLDER" />
          <RemoveFolder Id="RemoveProgramMenuDir" On="uninstall" />
          <RegistryValue Root="HKCU" Key="Software\dlapp" Name="startMenu" Type="integer" Value="1" KeyPath="yes" />
        </Component>
      </Directory>
    </StandardDirectory>

    <StandardDirectory Id="DesktopFolder">
      <Component Id="DesktopShortcutComponent" Guid="*">
        <Shortcut Id="DesktopShortcut" Name="dlapp" Target="[INSTALLFOLDER]dlapp.exe" WorkingDirectory="INSTALLFOLDER" />
        <RegistryValue Root="HKCU" Key="Software\dlapp" Name="desktop" Type="integer" Value="1" KeyPath="yes" />
      </Component>
    </StandardDirectory>
  </Fragment>

  <Fragment>
    <ComponentGroup Id="ProductComponents">
      <ComponentRef Id="MainExe" />
      <ComponentRef Id="StartMenuShortcutComponent" />
      <ComponentRef Id="DesktopShortcutComponent" />
    </ComponentGroup>
  </Fragment>
</Wix>
